@model NCQ.Tareas.WebApp.Models.ViewModels.TareaVM
@{
    ViewData["Title"] = "Tareas - Eliminar";
}

<h3 class=""><strong>Seguro que desea eliminar la tarea?</strong></h3>

<div class="@ViewBag.ClaseAlert" role="alert">
    @ViewBag.Mensaje
</div>

<div>
    <dl class="row border" >
        <dt class="col-sm-2"> @Html.DisplayNameFor(model =>  model.Descripcion)</dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model =>  model.Descripcion)</dd>

        <dt class="col-sm-2"> @Html.DisplayNameFor(model =>  model.ColaboradorNombre)</dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model =>  model.ColaboradorNombre)</dd>

        <dt class="col-sm-2"> @Html.DisplayNameFor(model =>  model.EstadoDesc)</dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model =>  model.EstadoDesc)</dd>

        <dt class="col-sm-2"> @Html.DisplayNameFor(model =>  model.PrioridadDesc)</dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model =>  model.PrioridadDesc)</dd>

        <dt class="col-sm-2"> @Html.DisplayNameFor(model =>  model.FechaInicio)</dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model =>  model.FechaInicio)</dd>

        <dt class="col-sm-2"> @Html.DisplayNameFor(model =>  model.FechaFin)</dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model =>  model.FechaFin)</dd>

        <dt class="col-sm-2"> @Html.DisplayNameFor(model =>  model.Notas)</dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model =>  model.Notas)</dd>

    </dl>
</div>

<form asp-action="Eliminar">
    <input type="hidden" asp-asp-for="Id" />
    <input type="submit" value="Eliminar" class="btn btn-sm btn-danger"> 
    <a asp-action="Index" class="btn btn-sm btn-secondary">
        <span class="bi bi-x-lg"></span> Cancelar
    </a>
</form>