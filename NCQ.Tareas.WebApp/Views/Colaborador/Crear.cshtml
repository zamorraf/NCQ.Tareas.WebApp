@model Colaborador
@{
    ViewData["Tittle"] = "Colaboradores - Crear";
}

<h1>Crear Colaborador</h1>

<div class="@ViewBag.ClaseAlert" role="alert">
    @ViewBag.Mensaje
</div>

<div class="row">
    <form asp-action="Crear" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="NombreCompleto" class="control-label"></label>
            <input asp-for="NombreCompleto" class="form-control" />
            <span asp-validation-for="NombreCompleto" class="text-danger"></span>
        </div>

        <br />
        <div class="form-group">
            <input type="submit" value="Guardar" class="btn btn-sm btn-success">
            <a asp-action="Index" class="btn btn-sm btn-secondary">Regresar</a>
        </div>
    </form>
</div>